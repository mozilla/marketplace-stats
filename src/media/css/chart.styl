@import 'lib';

$bar-height = 25px;

small-button() {
    font-size: 13px;
    height: 26px;
    line-height: 25px;
}

.axis path, .axis line {
    fill: none;
    shape-rendering: crispEdges;
    stroke-width: 1.0px;
    stroke: #000;
}

.line {
    fill: none;
    stroke: #4682b4;
    stroke-width: 2px;
}

.dashboard .line {
    stroke-width: 1px;
}

.tooltip {
    background: #000;
    border-radius: 3px;
    border: 0px solid #000;
    color: #fff;
    font: 12px sans-serif;
    min-width: 130px;
    opacity: 0;
    padding: 10px;
    pointer-events: none;
    position: absolute;
    text-align: left;
}

.timeinfo {
    margin: 3px 0 5px;
}

svg {
    background-color: #fff;
    border-radius: 3px;
    font-size: 11px;
    position: relative;
    top: 4px;

    circle {
        cursor: pointer;
        opacity: 0;
    }
}

.chartcloak {
    background: #fff;
    display: none;
    height: 440px;
    left: 36px;
    position: absolute;
    top: 113px;
    width: $desktop-content - 10;
    z-index: 20;

    .message {
        color: #aaa;
        font-size: 24px;
        font-weight: bold;
        margin-top: 200px;
        text-align: center;
    }
}

.legend {
    left: 50%;
    margin: 15px 0 0;
    padding: 10px;
    position: absolute;
    transform: translate(-50%, 10%);
}

.legend a {
    display: inline-block;
    font-size: 14px;
    margin: 0 15px;

    // Override the inline color style.
    &.hidden {
        color: #bbb !important;
    }
}

.graphline {
    transition: all 1s linear;
}

.options {
    height: 30px;
    margin: 25px 0;

    .button {
        small-button();
    }
}

.x-datepicker-input {
    padding-left: 10px;
    padding-right: 5px;
}

.options input, .cbox, .legend, .options x-datepicker, x-calendar, .calendar, .bar-wrapper {
    border-radius: 3px;
}

x-calendar {
    border-width: 1px;
}

.cbox, .legend, .options x-datepicker input {
    background-color: #fff;
    border: 1px solid #ccc;
}

.cbox {
    padding: 4px 0 4px 4px;
}

x-datepicker {
    border: 0;
    height: 26px;
    width: 150px;
    padding-left: 5px;
    padding-right: 5px;
}

.date-range {
    display: flex;
}

// Thanks mbostock! http://bl.ocks.org/mbostock/3750941
.progress-meter .background {
    fill: #ccc;
}

.progress-meter .foreground {
    fill: $sailor-blue;
}

.progress-meter text {
    font-family: "helvetica neue", helvetica, arial, sans-serif;
    font-size: 24px;
    font-weight: bold;
}

.regions {
    margin-right: 40px;
    margin-top: -4px;

    +ltr() {
        margin-right: 40px;
    }
    +rtl() {
        margin-left: 40px;
    }
    select {
        margin-top: -15px;
        margin-left: 6px;
        font-size: 13px;
    }
    em {
        background-position: -1px -1px;
        background-repeat: no-repeat;
        background-size: 26px auto;
        border-radius: 12px;
        border: 0;
        display: inline-block;
        height: 24px;
        margin: 0 2px;
        width: 24px;
    }
}

for region in $regions
    em.{region} {
        background-image: url(unquote('../img/icons/regions/' + region + '.png'));
    }

.extras, .total-val {
    display: none;
}

.extras {
    margin-top: 25px;
}

.grid {
    .tick {
        fill: none;
        shape-rendering: crispedges;
        stroke: #f0f0f0;
        stroke-width: 1px;
    }
    path {
        stroke-width: 0;
    }
}

.y .tick line,
.x .tick line {
    display: none;
}

.y path,
.x path {
    display: none;
    fill: none;
}

.bars {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-top: 60px;

    .bar-wrapper {
        color: #fff;
        font-size: 13px;
        margin: 35px 0 0 0;
        padding: 2px 0;
        width: 290px;

        ul {
            list-style: none;
        }
        &.double, &.double ul {
            width: 465px;
        }
        &.single {
            width: 100%;

            .heading {
                display: none;
            }
        }
    }
    li {
        display: flex;
        height: $bar-height;
        justify-content: space-between;

        &:nth-child(2n) {
            background-color: rgba(255,255,255,0.1);
        }
    }
    time {
        padding: 0 10px;
        line-height: $bar-height;
    }
    span {
        border-radius: 0 3px 3px 0;
        display: inline-block;
        line-height: $bar-height;
        margin-left: 50px;
        padding: 0 10px;
        text-align: right;
    }
    .heading {
        color: #fff;
        font-size: 14px;
        margin: 10px 0;
        text-align: center;
    }
}

.sub {
    display: flex;
    justify-content: space-between;
    width: 100%;

    ul {
        display: flex;
    }
    li {
        +ltr() {
            margin-right: 5px;
        }
        +rtl() {
            margin-left: 5px;
        }
        &:last-child {
            margin-right: 0;
        }
    }
    .button {
        small-button();
    }
}

.interval {
    align-self: flex-end;
    flex-grow: 1;
    padding: 10px 5px 0;

    ul {
        display: flex;
        justify-content: flex-end;
    }
    li {
        font-size: 12px;
        padding: 0 15px;

        &.active a {
            font-weight: 500;
            text-decoration: underline;
        }
    }
}
